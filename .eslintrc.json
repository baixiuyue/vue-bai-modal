{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "error",
        "no-this-before-super": "warn",
        "no-undef": "error",
        "no-unreachable": "warn",
        "no-unused-vars": "error",
        "constructor-super": "warn",
        "valid-typeof": "error",
        "no-var": "error",
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "valid-jsdoc": "error",
        "prefer-const": "error",
        "quotes": [
            "error",
            "single"
        ],
        "no-console": "off",
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "import": false
    }
}